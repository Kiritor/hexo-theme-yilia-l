 .toc-article {
        background: #fff;
        padding: 1em;
		border:1px solid #eee;
        position: relative;
        left: 1em;
		font-size:14px;
		color:#000000;
    }
    .toc-article .toc-title {
        padding-bottom: 0.4em;
		padding-top:0.4em;
        font-weight: bold;
		vertical-align:middle;
    }
	.toc-article .toc-title:hover {
	    color:#fac22b;
		background-color:#f8f6f6;
	}
    #toc {
        line-height: 1.1em;
        font-size:12px;
        float: right;
		z-index:9999;
		min-width:200px;
		right:80px;
    }
    #toc .toc {
        padding: 0
    }
    #toc li,
    .toc li {
        list-style-type: none;
		padding-top:3px;
		padding-bottom:3px;
		vertical-align:middle;
    }
	.toc li a:hover {
	    background-color:#f8f6f6;
	}
    #toc ol {
        margin: 0;
    }
    #toc .toc-child {
        padding-left: 1.5em
    }
	#toc .toc-text {
	    color:#4CA0E4;
	}